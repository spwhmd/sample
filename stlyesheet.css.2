html, body,
ul, ol, li,
h1, h2, h3, h4, h5, h6, p,
form, input, div {
  margin: 0;
  padding: 0;
}

body {
  font-family: "Avenir Next", "Hiragino Kaku Gothic ProN W3", sans-serif;
}

li {
  list-style: none;
}

.header {
  height: 65px;
  width: 100%;
  background-color: rgba(90, 149, 188, 0.3);
  background-image:linear-gradient(130deg, rgba(0, 0, 0, 0),rgb(103, 165, 227));
  position: fixed;
  top: 0;
  z-index: 10;
} 

.header-left {
  float: left;
}

.header-right {
  float: right;
  background-color: rgba(103, 165, 227, 0.5);
  transition: all 0.5s;
}

.header-right li {
  float: left;
}

.header-right:hover {
  background-color: rgba(255, 255, 255, 0.5);
}

.header-right a {
  line-height: 65px;
  padding: 0 25px;
  color: white;
  display: block;
}
 .header-logo {
  float: left;
  margin-top: 20px;
}

.main {
    padding: 100px 80px;   
  }
  
